{
  "name": "ticket-booking-backend",
  "version": "1.0.0",
  "description": "A backend API for booking and managing bus tickets.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --passWithNoTests",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "jest tests/integration --verbose",
    "test:all": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
    ,"bump:patch": "bash scripts/bump-version.sh patch --yes"
    ,"bump:minor": "bash scripts/bump-version.sh minor --yes"
    ,"bump:major": "bash scripts/bump-version.sh major --yes"
    ,"release:patch": "npm run bump:patch && bash scripts/create-and-push-tag.sh"
    ,"release:minor": "npm run bump:minor && bash scripts/create-and-push-tag.sh"
    ,"release:major": "npm run bump:major && bash scripts/create-and-push-tag.sh"
  },
  "keywords": [
    "ticket",
    "booking",
    "backend",
    "express",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
